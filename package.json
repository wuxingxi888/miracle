{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm --dir ./packages/miracle dev",
    "lint": "eslint \"./packages/**/{src,test}/**/*.{vue,ts,tsx,js,mjs,cjs}\"",
    "test": "pnpm --dir ./packages/miracle test",
    "test:watch": "pnpm --dir ./packages/miracle test:watch",
    "test:update": "pnpm --dir ./packages/miracle test:update",
    "test:coverage": "pnpm --dir ./packages/miracle test:coverage",
    "build": "pnpm --dir ./packages/miracle build",
    "build:site": "pnpm --dir ./packages/miracle build:site",
    "clean": "find ./ -type d -name 'node_modules' -exec rm -rf {} +"
  },
  "nano-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix"
  },
  "engines": {
    "pnpm": ">= 8.8.0"
  },
  "packageManager": "pnpm@8.14.1",
  "devDependencies": {
    "@miracle/cli": "workspace:*",
    "@miracle/eslint-config": "workspace:*",
    "eslint": "^8.46.0",
    "husky": "^8.0.1",
    "nano-staged": "^0.8.0",
    "prettier": "^3.0.0"
  }
}
