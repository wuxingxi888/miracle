{
    "name": "@miracle-web/popperjs",
    "version": "0.0.1",
    "description": "Pre-compiled popperjs core",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.esm.mjs",
            "require": "./dist/index.cjs.js"
        }
    },
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "dev": "node ./build.js -w",
        "build:types": "tsc -p ./tsconfig.json --emitDeclarationOnly",
        "build:bundle": "node ./build.js",
        "build": "pnpm clean && pnpm build:bundle && pnpm build:types",
        "release": "miracle-cli release",
        "prepare": "pnpm build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wuxingxi888/miracle.git",
        "directory": "packages/miracle-popperjs"
    },
    "bugs": "https://github.com/wuxingxi888/miracle/issues",
    "author": "TomCat",
    "license": "MIT",
    "devDependencies": {
        "@popperjs/core": "^2.11.8",
        "esbuild": "^0.23.1",
        "rimraf": "^6.0.1",
        "typescript": "^5.5.4"
    }
}
